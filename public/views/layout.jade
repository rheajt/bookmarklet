doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title title
    link(rel='stylesheet prefetch', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', href='stylesheets/style.css')

  body
    #wrapper
      .overlay
      // Sidebar
      nav#sidebar-wrapper.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        ul.nav.sidebar-nav
          li.sidebar-brand
            a.text-center(href='http://plnnr.net')
              | plnnr.net
          li
            a(href="/")
              i.fa.fa-fw.fa-home
              | Home
          li
            a(href='/attendance')
              i.fa.fa-fw.fa-bank
              | Attendance
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              i.fa.fa-fw.fa-plus
              | More
              span.caret
            ul.dropdown-menu(role='menu')
              li.dropdown-header Useful Tools
              li
                a(href='/readable') Readable!
      // /#sidebar-wrapper
      // Page Content
      #page-content-wrapper
        button.hamburger.is-closed.animated.fadeInLeft(type='button', data-toggle='offcanvas')
          span.hamb-top
          span.hamb-middle
          span.hamb-bottom
        .container

          block content

          .footer.row
            .col-xs-2
              a(href='http://plnnr.net', target='_blank')
                img(src="images/test-banner.jpg").img-responsive.pull-right
            .col-xs-10
              h2
                | Created by #[a(href='http://jordanrhea.com', target='_blank') Jordan Rhea]
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(src='javascripts/index.js')
